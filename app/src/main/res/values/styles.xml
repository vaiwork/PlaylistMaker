<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="activityMainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/button_main_activity_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/button_main_activity_margin_right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_main_activity_padding</item>
        <item name="cornerRadius">@dimen/button_main_activity_corner_radius</item>

        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>

        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
    <style name="activitySettingsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">9</item>
        <item name="android:layout_marginTop">@dimen/text_settings_activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_settings_activity_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/text_settings_activity_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_settings_activity_margin_end</item>
        <item name="android:textSize">@dimen/text_settings_activity_size</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>
    <style name="activitySettingsImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/icon_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/icon_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_end</item>

        <item name="android:scaleType">fitEnd</item>
    </style>
</resources>