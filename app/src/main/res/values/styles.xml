<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="activityMainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/button_main_activity_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/button_main_activity_margin_right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_main_activity_padding</item>
        <item name="cornerRadius">@dimen/button_main_activity_corner_radius</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
    <style name="activitySettingsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">9</item>
        <item name="android:layout_marginTop">@dimen/text_settings_activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_settings_activity_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/text_settings_activity_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_settings_activity_margin_end</item>
        <item name="android:textSize">@dimen/text_settings_activity_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>
    <style name="activitySettingsImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/icon_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/icon_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_end</item>
        <item name="android:scaleType">fitEnd</item>
    </style>
    <style name="activitySearchPlaceholderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/activity_search_text_view_margin_Top</item>
        <item name="android:layout_marginStart">@dimen/activity_search_text_view_margin_StartEnd</item>
        <item name="android:layout_marginEnd">@dimen/activity_search_text_view_margin_StartEnd</item>
        <item name="android:textSize">@dimen/activity_search_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:text">@string/founded_nothing</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>
    <style name="activitySearchButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/activity_search_button_margin_top</item>
        <item name="cornerRadius">@dimen/activity_search_corner_radius_button</item>
        <!-- <item name="android:background">?attr/colorOnPrimary</item> -->
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/activity_search_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
    <style name="activitySearchYourSearchTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginBottom">@dimen/activity_search_text_view_your_search_margin_bottom</item>
        <item name="android:paddingTop">@dimen/activity_search_text_view_your_search_padding_top</item>
        <item name="android:paddingBottom">@dimen/activity_search_text_view_your_search_padding_bottom</item>
        <item name="android:paddingStart">@dimen/activity_search_text_view_your_search_padding_start</item>
        <item name="android:paddingEnd">@dimen/activity_search_text_view_your_search_padding_end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/your_search</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/activity_search_text_size</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>
    <style name="activityPleerDynamicUpperTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/activity_pleer_upper_text_view_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="activityPleerStaticTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/activity_pleer_static_dynamic_text_view_text_size</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/activity_pleer_static_dynamic_text_view_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/activity_pleer_static_dynamic_text_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/activity_pleer_static_dynamic_text_view_margin_bottom</item>
    </style>
    <style name="activityPleerDynamicTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/activity_pleer_static_dynamic_text_view_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginEnd">@dimen/activity_pleer_static_dynamic_text_view_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/activity_pleer_static_dynamic_text_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/activity_pleer_static_dynamic_text_view_margin_bottom</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="fragmentFavouritesTracksPlaceholderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/activity_search_text_view_margin_Top</item>
        <item name="android:layout_marginStart">@dimen/activity_search_text_view_margin_StartEnd</item>
        <item name="android:layout_marginEnd">@dimen/activity_search_text_view_margin_StartEnd</item>
        <item name="android:textSize">@dimen/activity_search_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:text">@string/fragment_favourites_tracks_your_media_empty</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>
    <style name="fragmentPlaylistsPlaceholderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/activity_search_text_view_margin_Top</item>
        <item name="android:layout_marginStart">@dimen/activity_search_text_view_margin_StartEnd</item>
        <item name="android:layout_marginEnd">@dimen/activity_search_text_view_margin_StartEnd</item>
        <item name="android:textSize">@dimen/activity_search_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:text">@string/fragment_favourites_tracks_your_media_empty</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
    <style name="fragmentPlaylistsNewPlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">@dimen/activity_search_button_margin_top</item>
        <item name="cornerRadius">@dimen/activity_search_corner_radius_button</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/activity_search_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
    <style name="activityMediaTabLayoutText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
    <style name="activityNewPlaylistToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
</resources>