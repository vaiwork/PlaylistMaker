<resources>
    <!-- Base application theme. -->
    <style name="root" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="searchImageViewActivitySearchTheme" parent="root">
        <item name="android:src">@drawable/search_icon</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="clearTextImageViewActivitySearchTheme" parent="root">
        <item name="android:src">@drawable/clear_text_light_mode</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="trackArrowButtonTrackViewTheme" parent="root">
        <item name="android:src">@drawable/arrow_forward_light</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="trackEllipseTrackViewTheme" parent="root">
        <item name="android:src">@drawable/ellipse_light</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="activitySearchEmptyPlaceholderImageViewTheme" parent="root" >
        <item name="android:src">@drawable/empty_placeholder_light_mode</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="activitySearchErrorPlaceholderImageViewTheme" parent="root" >
        <item name="android:src">@drawable/error_placeholder_light_mode</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="activityPleerTheme" parent="root">
        <item name="navigationIcon">@drawable/back</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="fragmentFavouritesTracksPlaceholderImageViewTheme" parent="root" >
        <item name="android:src">@drawable/empty_placeholder_light_mode</item>
        <item name="android:layout_marginTop">106dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="fragmentFavouritesTracksTheme" parent="root">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="fragmentPlaylistsTheme" parent="root">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="fragmentPlaylistsPlaceholderImageViewTheme" parent="root" >
        <item name="android:src">@drawable/empty_placeholder_light_mode</item>
        <item name="android:layout_marginTop">46dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="activityMediaTheme" parent="Widget.Design.TabLayout">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="activityNewPlaylistTheme" parent="Widget.Design.TabLayout">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#AEAFB4</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="navigationIcon">@drawable/back</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="activityAudioPleerBottomSheetGrayView" parent="root">
        <item name="android:backgroundTint">#E6E8EB</item>
    </style>
    <style name="fragmentPlaylistTheme" parent="root">
        <item name="navigationIcon">@drawable/back</item>
        <item name="android:background">#E6E8EB</item>
    </style>
</resources>