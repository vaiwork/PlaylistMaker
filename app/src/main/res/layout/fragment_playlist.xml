<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/fragmentPlaylistTheme"
    android:orientation="vertical"
    tools:context=".ui.playlist.fragment.PlaylistFragment"
    android:id="@+id/fragment_playlist_coordinator_layout"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_playlist_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/fragment_playlist_panel_heade"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/fragment_playlist_album"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/placeholder_album_image_light_mode"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/fragment_playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Best songs 2021"
            android:textColorHint="@color/black"
            android:gravity="top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_playlist_album"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display_bold"
            />
        <TextView
            android:id="@+id/fragment_playlist_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Best description 2021"
            android:textColorHint="@color/black"
            android:gravity="top"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_playlist_name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display_regular"
            />
        <LinearLayout
            android:id="@+id/fragment_playlist_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_playlist_description"
            >
            <TextView
                android:id="@+id/fragment_playlist_calc_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="300 minutes"
                android:textColorHint="@color/black"
                android:gravity="top"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ys_display_regular"
                />
            <ImageView
                android:id="@+id/fragment_playlist_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dot_light_mode"
                />
            <TextView
                android:id="@+id/fragment_playlist_calc_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="98 tracks"
                android:textColorHint="@color/black"
                android:gravity="top"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ys_display_regular"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_playlist_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_playlist_calc"
            >
            <ImageView
                android:id="@+id/fragment_playlist_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fragment_playlist_share_light_mode"
                />
            <ImageView
                android:id="@+id/fragment_playlist_three_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fragment_playlist_three_dots_light_mode"
                android:layout_marginStart="16dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/fragment_playlist_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_playlist_bottom_sheet_radius_background"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="25dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

        >
        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/fragment_playlist_gray_view"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_playlist_recycler_view"
            android:theme="@style/root"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </LinearLayout>
    <View android:id="@+id/fragment_playlist_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/fragment_playlist_bottom_sheet_three_dots"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_playlist_bottom_sheet_radius_background"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="400dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:visibility="gone"
        >
        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/fragment_playlist_gray_view"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <include
                layout="@layout/playlist_view_bottom_sheet"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fragment_playlist_text_view_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="44dp"
                android:text="Поделиться"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/ys_display_regular"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fragment_playlist_text_view_edit_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="44dp"
                android:text="Редактировать информацию"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/ys_display_regular"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fragment_playlist_text_view_delete_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="44dp"
                android:text="Удалить плейлист"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/ys_display_regular"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>