<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlistsFragment"
    android:theme="@style/fragmentPlaylistsTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_playlists_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/fragment_playlists_new_playlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fragmentPlaylistsNewPlaylistButton"
            android:text="@string/fragment_playlists_new_playlist"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/fragment_playlists_placeholder_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fragmentPlaylistsPlaceholderImageViewTheme"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/fragment_playlists_placeholder_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/fragmentPlaylistsPlaceholderTextView"
            android:text="@string/fragment_playlists_you_do_not_create_no_one_playlists"
            android:visibility="gone"
            />
    </LinearLayout>

</FrameLayout>